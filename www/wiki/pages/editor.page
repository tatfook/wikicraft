                $('.well').css('top','0px');

                $('.treeview').css('top',p + $('#toolbarview').height() - startPos);
            }else{
                $('.well').css('position','static');
                $('.well').css('top','');

                $('.treeview').css('top','0px');
            }
        });
    });

