function user:api_verifyCellphoneTwo(params)
	self:ensureAuthenticated()
	local username = getTokenInfo().username
	if (not params.smsId) or (not params.smsCode) then
		return errors:wrap(errors.REQUEST_PARAMS_ERROR)
	end

