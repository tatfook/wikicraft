		return errors:wrap(errors:new("验证码错误"))
	end
	mem_cache:set(params.smsId, nil)
	
	local cellphone = value.cellphone

	-- if params.bind is true, it's for binding
	-- if params.bind is false, it's for unbinding
	if params.bind ~= nil then
		-- set cellphone to '' if it's unbinding 
		if not params.bind then
			cellphone = '' 
		end
		self:db():updateOne({["+username"]={username}}, {cellphone=cellphone}, resume)
		return errors:wrap(yield())
	end

	-- for realname verification
