-- @return true if removed
function website_stars:removeUser(project_name, user_id)
	if(not user_id or not project_name) then
		return
	end
	local proj = self:get({name=proj_name});
	if(proj) then
		local stars = proj.stars;
		-- remove user from project
		local new_stars = stars:gsub(tostring(user_id)..",", "");
		if(new_stars ~= stars) then
			local res = website_stars._super.update(self, {name = project_name, stars = new_stars})
			if(res) then
				return true;
			end
		else
			return true;
		end
	else
		return true;
	end
