	self:addfield("userId", "number", false)
	self:addfield("favoriteUserId", "number", false) -- 被收藏的用户ID
	self:addfield("favoriteType", "number", false) -- 0 - user 1 - website
	self:addfield("favoriteId", "number", false) -- userId websiteId
end

