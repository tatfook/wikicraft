-- =转成-equal  +转成-plus  /转成-slash
function worlds.base64(text)
	if(text) then
		local notLetter = string.find(text,"%A%A");

		if(notLetter) then
			text = Encoding.base64(text);

			text = text:gsub("[=]"  , "-equal");
			text = text:gsub("[%+]" , "-plus");
			text = text:gsub("[/]"  , "-slash");
		else
			text = "world_" .. text;
		end

		--LOG.std(nil,"debug","text",text);

		return text;
	else
		return nil;
	end
end

function worlds.unbase64(text)
	if(text) then
		local notLetter = string.find(text,"world_");

		if(notLetter) then
			text = text:gsub("[-equal]" , "=");
			text = text:gsub("[-plus]"  , "+");
			text = text:gsub("[-slash]" , "/");

			return Encoding.unbase64(text);

		else
			return text;
		end
	else
		return nil;
	end
end

function worlds.strRepeat(num,str)
	local strRepeat = "";

	for i=1,num do
		strRepeat = strRepeat .. str;
	end

	return strRepeat;
end